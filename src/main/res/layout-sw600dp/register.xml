<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/canvas">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_marginTop="40dp"
        android:textSize="55sp"
        android:textColor="#fff"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/regNickname"
        android:layout_width="543dp"
        android:layout_height="69dp"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:background="@drawable/custom_button_description"
        android:hint="Nickname"
        android:paddingStart="15sp"
        android:textColorHint="#fff"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/regPassword"
        android:layout_width="543dp"
        android:layout_height="69dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20sp"
        android:background="@drawable/custom_button_description"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingStart="15sp"
        android:textColorHint="#fff"
        android:textSize="25sp" />

    <EditText
        android:layout_width="543dp"
        android:layout_height="69dp"
        android:textSize="25sp"
        android:layout_marginBottom="20sp"
        android:hint="Phone number"
        android:id="@+id/regPhoneNumber"
        android:paddingStart="15sp"
        android:textColorHint="#fff"
        android:background="@drawable/custom_button_description"
        android:layout_gravity="center"
        />

    <EditText
        android:layout_marginBottom="20sp"
        android:textSize="25sp"
        android:inputType="textEmailAddress"
        android:paddingStart="15sp"
        android:id="@+id/regEmail"
        android:layout_width="543dp"
        android:layout_height="69dp"
        android:hint="@string/email"
        android:background="@drawable/custom_button_description"
        android:layout_gravity="center"
        android:textColorHint="#fff"
        />

    <EditText
        android:id="@+id/description"
        android:layout_width="543dp"
        android:layout_height="235dp"
        android:layout_gravity="center"
        android:background="@drawable/custom_button_description"
        android:gravity="start"
        android:hint="@string/few_words_about_me"
        android:paddingStart="10sp"
        android:paddingTop="8dp"
        android:textColorHint="#fff"
        android:textSize="25sp" />


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:text="Agree to terms and conditions"
        android:layout_gravity="center"
        android:id="@+id/chkTandC"
        android:textSize="19sp"
        android:onClick="createAccount"
        />





</LinearLayout>