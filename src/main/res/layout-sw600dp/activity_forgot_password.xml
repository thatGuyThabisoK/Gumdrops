<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ForgotPassword"
    android:background="@drawable/canvas_without_bar">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:text="Forgot Password"
        android:textColor="#fff" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/forgotpass"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textSize="55sp"
        android:textColor="#fff"
        android:layout_gravity="center"/>

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:layout_marginBottom="5dp"
        android:text="Enter the email address associated with\n                         your account"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/forgotPassword"
        android:layout_width="544dp"
        android:layout_height="71dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:textColor="#fff"
        android:background="@drawable/custom_button_description"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:paddingStart="15dp"
        android:textSize="25sp" />

    <Button
        android:layout_width="544dp"
        android:layout_height="78dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_success"
        android:onClick="requestPassword" />




</LinearLayout>