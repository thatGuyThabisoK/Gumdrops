<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ForgotPassword"
    android:background="@drawable/canvas_without_bar">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:layout_marginStart="130dp"
        android:layout_marginTop="20dp"
        android:text="Forgot Password"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/forgotpass"
        android:layout_marginTop="100dp"
        android:layout_marginStart="140dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textSize="35sp"
        android:textColor="#fff"
        android:layout_marginStart="50dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="Enter the email address associated with\n                         your account"
        android:layout_gravity="center"/>

    <EditText
        android:layout_width="330dp"
        android:layout_height="51dp"
        android:id="@+id/forgotPassword"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:inputType="textEmailAddress"
        android:paddingStart="15dp"
        android:textSize="15sp"
        android:background="@drawable/custom_button_description"
        android:hint="@string/email" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_success"
        android:onClick="requestPassword"/>




</LinearLayout>